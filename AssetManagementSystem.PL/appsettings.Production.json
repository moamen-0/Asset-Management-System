{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};Encrypt=True;TrustServerCertificate=True;"
  },
  "ApplicationUrl": "http://localhost:5187",
  "AllowedHosts": "*",
  "Email": {
    "Server": "smtp.gmail.com",
    "Port": 587,
    "SenderName": "Asset Management System",
    "SenderEmail": "${EMAIL_SENDER}",
    "Account": "${EMAIL_ACCOUNT}",
    "Password": "${EMAIL_PASSWORD}",
    "Security": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}