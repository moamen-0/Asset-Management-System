@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">

    <style>
        .language-switcher {
            display: flex;
            gap: 8px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 5px;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .lang-btn {
            border: none;
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            color: black; /* Default text color is black */
            background: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
            cursor: pointer;
            outline: none;
        }

            .lang-btn:hover {
                background: rgba(255, 255, 255, 0.4);
                transform: scale(1.05);
            }

            .lang-btn.active {
                background: linear-gradient(135deg, #4e54c8, #8f94fb);
                color: white; /* Text color is white when active */
                box-shadow: 0 4px 10px rgba(79, 92, 255, 0.3);
                transform: scale(1.1);
            }
        .dropdown-item {
            cursor: pointer;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
            }

        .flag-icon {
            margin-right: 8px;
        }

        [dir="rtl"] .flag-icon {
            margin-right: 0;
            margin-left: 8px;
        }

        .nav-item .icon-badge {
            position: absolute;
            top: 5px;
            right: 5px;
            font-size: 0.75rem;
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 3px 6px;
        }

        .dropdown-menu {
            margin-top: 0.125rem;
            position: absolute;
            z-index: 1050;
        }

            .dropdown-menu.show {
                display: block;
            }

        .nav-item.dropdown {
            position: relative;
        }

        /* Ensure proper dropdown positioning */
        .navbar-nav .dropdown-menu {
            position: absolute;
            float: none;
        }

        /* Fix RTL dropdown alignment */
        [dir="rtl"] .dropdown-menu-end {
            right: auto;
            left: 0;
        }
        /* Dark Mode Styles */
        .dark-mode {
            background-color: #343a40 !important;
            color: white !important;
        }

            .dark-mode .main-header.navbar {
                background-color: #343a40 !important;
                border-color: #454d55 !important;
            }

            .dark-mode .main-header .navbar-nav .nav-link {
                color: white !important;
            }

            .dark-mode .main-sidebar {
                background-color: #343a40 !important;
            }

                .dark-mode .main-sidebar .nav-sidebar .nav-link {
                    color: white !important;
                }

            .dark-mode .content-wrapper {
                background-color: #454d55 !important;
            }

            .dark-mode .brand-link {
                background-color: #343a40 !important;
                color: white !important;
            }

            .dark-mode .user-panel .info a {
                color: white !important;
            }

            .dark-mode .dropdown-menu {
                background-color: #343a40 !important;
                border-color: #454d55 !important;
            }

            .dark-mode .dropdown-item {
                color: white !important;
            }

                .dark-mode .dropdown-item:hover {
                    background-color: #454d55 !important;
                }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">

    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand"></i>
                    </a>
                </li>
           

            <!-- Language Switcher -->
            <li class="nav-item">
                <div class="language-switcher">
                    <button type="button" class="lang-btn active" onclick="handleLanguageChange('en')" id="lang-en">
                        🇺🇸 EN
                    </button>
                    <button type="button" class="lang-btn" onclick="handleLanguageChange('ar')" id="lang-ar">
                        🇪🇬 AR
                    </button>
                </div>
            </li>
			</ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ms-auto">
                <!-- Notifications Icon -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="notificationIcon" role="button"
                       data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false">
                        <i class="fas fa-bell"></i>
                        <span class="icon-badge">3</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationIcon">
                        <h6 class="dropdown-header">Notifications</h6>
                        <a class="dropdown-item" href="#">New asset added</a>
                        <a class="dropdown-item" href="#">Approval pending</a>
                        <a class="dropdown-item" href="#">System update</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-center" href="#">View all notifications</a>
                    </div>
                </li>

               

                <!-- Dark Mode Toggle -->
                <li class="nav-item">
                    <a class="nav-link" href="#" id="darkModeToggle">
                        <i class="fas fa-moon"></i>
                    </a>
                </li>

                <!-- Profile Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false">
                        <i class="bi bi-person-circle"></i> Profile
                    </a>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <h6 class="dropdown-header">User Options</h6>
                        <a class="dropdown-item" asp-controller="User" asp-action="Profile">
                            <i class="fas fa-user-circle me-2"></i> View Profile
                        </a>
                        <a class="dropdown-item" asp-controller="User" asp-action="EditProfile">
                            <i class="fas fa-edit me-2"></i> Edit Profile
                        </a>
                        <a class="dropdown-item" asp-controller="User" asp-action="ChangePassword">
                            <i class="fas fa-key me-2"></i> Change Password
                        </a>
                        <div class="dropdown-divider"></div>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="dropdown-item">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link text-danger p-0">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </button>
                        </form>
                    </div>
                </li>

                <!-- Logout Button -->
                <li class="nav-item">
                    <form asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link text-center">
                <i class="fas fa-cubes pl-3"></i> <span class="brand-text font-weight-light">Asset Management</span>
            </a>

            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <!-- User Profile -->
                            <div class="user-panel d-flex align-items-center">
                                <div class="image">
                                    <i class="fas fa-user-circle fa-2x text-white"></i>
                                </div>
                                <div class="info">
                                    <a class="d-block" asp-controller="User" asp-action="Profile">
                                        @User.Identity.Name
                                    </a>
                                    <small class="text-white-50">@User.FindFirstValue(ClaimTypes.Role)</small>
                                </div>
                            </div>
                        </li>
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <!-- Assets -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Asset")" class="nav-link">
                                <i class="nav-icon fas fa-box"></i>
                                <p>Assets</p>
                            </a>
                        </li>

                        <!-- Changelog -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "ChangeLog")" class="nav-link">
                                <i class="nav-icon fas fa-history"></i>
                                <p>Changelog</p>
                            </a>
                        </li>

                        <!-- Disposal -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Disposal")" class="nav-link">
                                <i class="nav-icon fas fa-trash-alt"></i>
                                <p>Disposal</p>
                            </a>
                        </li>

                        <!-- Asset Transfers -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "AssetTransfer")" class="nav-link">
                                <i class="nav-icon fas fa-exchange-alt"></i>
                                <p>Asset Transfers</p>
                            </a>
                        </li>

                        <!-- User Management -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "User")" class="nav-link">
                                <i class="nav-icon fas fa-users-cog"></i>
                                <p>User Management</p>
                            </a>
                        </li>
                        <!-- Locations Management (Unified) -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Location")" class="nav-link">
                                <i class="nav-icon fas fa-map-marked-alt"></i>
                                <p>Location Management</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Departments", "Location")" class="nav-link">
                                <i class="nav-icon fas fa-sitemap"></i>
                                <p>Departments</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Disbursement")" class="nav-link">
                                <i class="nav-icon fas fa-clipboard-list"></i>
                                <p>طلبات الصرف</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- Required JS Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>

    <script>
              function handleLanguageChange(lang) {
            console.log("Language changed to:", lang);

            // تحديث الزر النشط
            document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById(`lang-${lang}`).classList.add('active');
        }
        $(document).ready(function () {
                 // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Initialize popovers
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
        popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl)
        });
            // Sidebar toggle
            $('[data-widget="pushmenu"]').on('click', function () {
                $('.main-sidebar').toggleClass('sidebar-collapse');
            });

            // Fullscreen toggle with cross-browser support
            $('[data-widget="fullscreen"]').on('click', function () {
                if (!document.fullscreenElement) {
                    document.documentElement.requestFullscreen();
                } else {
                    document.exitFullscreen();
                }
            });

            // Dark Mode Toggle
            function applyDarkMode(enabled) {
                if (enabled) {
                    $('body').addClass('dark-mode');
                    $('#darkModeToggle i').removeClass('fa-moon').addClass('fa-sun');
                } else {
                    $('body').removeClass('dark-mode');
                    $('#darkModeToggle i').removeClass('fa-sun').addClass('fa-moon');
                }
            }

            let darkMode = localStorage.getItem('darkMode') === 'enabled';
            applyDarkMode(darkMode);

            $('#darkModeToggle').on('click', function () {
                darkMode = !darkMode;
                localStorage.setItem('darkMode', darkMode ? 'enabled' : 'disabled');
                applyDarkMode(darkMode);
            });





             // Bootstrap Dropdown Initialization
            var dropdowns = [].slice.call(document.querySelectorAll('.dropdown-toggle'))
        dropdowns.map(function (dropdownToggle) {
            return new bootstrap.Dropdown(dropdownToggle, {
                autoClose: true
            });
        });
        });
          // Language Switcher
              function switchLanguage(lang) {
            // Store the selected language
            localStorage.setItem('selectedLanguage', lang);

            // Update the document direction
            document.documentElement.dir = lang === 'ar' ? 'rtl' : 'ltr';
            document.documentElement.lang = lang;

            // Optionally reload the page
            location.reload();
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>