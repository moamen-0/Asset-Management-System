@model AssetManagementSystem.DAL.Entities.Facility
@{
    ViewData["Title"] = "Create Facility";
    Layout = "~/Views/Shared/_Dashboard_Tabler.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-building-add me-2"></i> Create New Facility</h2>
        </div>
        <div class="card-body">
            <form asp-action="CreateFacility" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Facility Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>