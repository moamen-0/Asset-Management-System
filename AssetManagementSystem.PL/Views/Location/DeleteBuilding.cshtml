@model AssetManagementSystem.DAL.Entities.Building
@{
    ViewData["Title"] = "Delete Building";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i> Delete Building</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="bi bi-exclamation-circle"></i> Warning!</h5>
                <p>Are you sure you want to delete the building "<strong>@Model.Name</strong>"?</p>
                <p>This will also delete all floors and rooms associated with this building.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Building Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Facility:</dt>
                <dd class="col-sm-9">@Model.Facility?.Name</dd>

                <dt class="col-sm-3">Floors Count:</dt>
                <dd class="col-sm-9">@(Model.Floors?.Count() ?? 0)</dd>
            </dl>

            <form asp-action="DeleteBuilding" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>