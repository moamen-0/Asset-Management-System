<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-file-import me-2"></i> استيراد <span id="importLocationType">المواقع</span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="import-icon-container mb-3">
                        <i class="fas fa-file-excel fa-4x text-success"></i>
                        <i class="fas fa-arrow-right fa-2x text-primary mx-3"></i>
                        <i class="fas fa-database fa-4x text-primary"></i>
                    </div>
                    <h5>استيراد من ملف Excel</h5>
                    <p class="text-muted">قم بتحميل ملف Excel يحتوي على البيانات</p>
                </div>

                <form action="@Url.Action("ImportLocations", "Location")" method="post" enctype="multipart/form-data" id="importForm">
                    <input type="hidden" name="locationType" id="locationTypeInput" value="facility" />

                    <div class="mb-3">
                        <div class="custom-file-upload">
                            <div class="input-group">
                                <input type="file" name="file" id="importFile" class="form-control" accept=".xlsx,.xls" required />
                                <label for="importFile" class="input-group-text">
                                    <i class="fas fa-upload"></i>
                                </label>
                            </div>
                            <small class="form-text text-muted">الملفات المدعومة: .xlsx, .xls</small>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <span>تأكد من أن الملف يحتوي على الأعمدة الصحيحة المطابقة لنموذج النظام</span>
                    </div>

                    <div id="templateLinkContainer" class="mb-3">
                        <a href="#" id="downloadTemplate" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-download me-1"></i> تنزيل نموذج للاستيراد
                        </a>
                    </div>

                    <div class="text-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i> إلغاء
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-file-import me-1"></i> استيراد
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link href="~/css/location-statistics.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/location-statistics.js"></script>
    <script>
        $(document).ready(function() {

              $('#importModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var locationType = button.data('location-type');
                var locationTypeDisplay = '';

                switch(locationType) {
                    case 'facility':
                        locationTypeDisplay = 'المنشآت';
                        break;
                    case 'department':
            locationTypeDisplay = 'الأقسام';
            break;
                    case 'building':
                        locationTypeDisplay = 'المباني';
                        break;
                    case 'floor':
                        locationTypeDisplay = 'الطوابق';
                        break;
                    case 'room':
                        locationTypeDisplay = 'الغرف';
                        break;
                    default:
                        locationTypeDisplay = 'المواقع';
                }

                $('#importLocationType').text(locationTypeDisplay);
                $('#locationTypeInput').val(locationType);

                // Update template download link
                $('#downloadTemplate').attr('href', '@Url.Action("DownloadLocationTemplate", "Location")?locationType=' + locationType);
            });

            // Form validation
            $('#importForm').on('submit', function(e) {
                var fileInput = $('#importFile')[0];
                if (fileInput.files.length === 0) {
                    e.preventDefault();
                    alert('الرجاء اختيار ملف للاستيراد');
                    return false;
                }

                var fileName = fileInput.files[0].name;
                var fileExt = fileName.split('.').pop().toLowerCase();

                if (fileExt !== 'xlsx' && fileExt !== 'xls') {
                    e.preventDefault();
                    alert('الرجاء اختيار ملف Excel صالح (.xlsx or .xls)');
                    return false;
                }

                return true;
            });
            // تبديل مباني المنشأة
            $(".facility-item").click(function(e) {
                e.preventDefault();
                const facilityId = $(this).data('id');
                $("#facility-" + facilityId).slideToggle();

                // تحميل تفاصيل المنشأة
                loadFacilityDetails(facilityId);
            });

            // تبديل طوابق المبنى
            $(document).on('click', '.building-item', function(e) {
                e.preventDefault();
                const buildingId = $(this).data('id');
                $("#building-" + buildingId).slideToggle();

                // تحميل تفاصيل المبنى
                loadBuildingDetails(buildingId);
            });

            // تبديل غرف الطابق
            $(document).on('click', '.floor-item', function(e) {
                e.preventDefault();
                const floorId = $(this).data('id');
                $("#floor-" + floorId).slideToggle();

                // تحميل تفاصيل الطابق
                loadFloorDetails(floorId);
            });

            function loadFacilityDetails(facilityId) {
                $.ajax({
                    url: '/Location/GetFacilityDetails',
                    type: 'GET',
                    data: { id: facilityId },
                    success: function(data) {
                        $("#detail-title").html('<i class="bi bi-building"></i> تفاصيل المنشأة');
                        $("#location-details").html(data);
                    },
                    error: function() {
                        $("#location-details").html('<div class="alert alert-danger">فشل في تحميل تفاصيل المنشأة</div>');
                    }
                });
            }

            function loadBuildingDetails(buildingId) {
                $.ajax({
                    url: '/Location/GetBuildingDetails',
                    type: 'GET',
                    data: { id: buildingId },
                    success: function(data) {
                        $("#detail-title").html('<i class="bi bi-house"></i> تفاصيل المبنى');
                        $("#location-details").html(data);
                    },
                    error: function() {
                        $("#location-details").html('<div class="alert alert-danger">فشل في تحميل تفاصيل المبنى</div>');
                    }
                });
            }

            function loadFloorDetails(floorId) {
                $.ajax({
                    url: '/Location/GetFloorDetails',
                    type: 'GET',
                    data: { id: floorId },
                    success: function(data) {
                        $("#detail-title").html('<i class="bi bi-layers"></i> تفاصيل الطابق');
                        $("#location-details").html(data);
                    },
                    error: function() {
                        $("#location-details").html('<div class="alert alert-danger">فشل في تحميل تفاصيل الطابق</div>');
                    }
                });
            }
        });
