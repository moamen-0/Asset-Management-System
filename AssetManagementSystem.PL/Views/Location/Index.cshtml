@model IEnumerable<AssetManagementSystem.DAL.Entities.Facility>
@{
    ViewData["Title"] = "إدارة المواقع";
    Layout = "~/Views/Shared/_Dashboard_Tabler.cshtml";
}
<div class="card shadow-lg rounded-4 mb-4 border-0">
    <div class="card-body p-2">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div class="d-flex align-items-center">
                <h4 class="text-primary mb-0 ms-2"><i class="fas fa-file-import"></i> استيراد المواقع</h4>
            </div>
            <div class="quick-actions">
                <div class="dropdown d-inline-block">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="importDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-file-import me-1"></i> استيراد
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="importDropdown">
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#importModal" data-location-type="facility">المنشآت</a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#importModal" data-location-type="department">الأقسام</a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#importModal" data-location-type="building">المباني</a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#importModal" data-location-type="floor">الطوابق</a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#importModal" data-location-type="room">الغرف</a></li>
                    </ul>
                </div>

                <div class="dropdown d-inline-block">
                    <button class="btn btn-success dropdown-toggle" type="button" id="templateDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-download me-1"></i> تنزيل نموذج
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="templateDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("DownloadLocationTemplate", "Location", new { locationType = "facility" })">نموذج المنشآت</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("DownloadLocationTemplate", "Location", new { locationType = "department" })">نموذج الأقسام</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("DownloadLocationTemplate", "Location", new { locationType = "building" })">نموذج المباني</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("DownloadLocationTemplate", "Location", new { locationType = "floor" })">نموذج الطوابق</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("DownloadLocationTemplate", "Location", new { locationType = "room" })">نموذج الغرف</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i> إدارة المواقع</h2>
            <a asp-action="CreateFacility" class="btn btn-light rounded-pill">
                <i class="bi bi-plus-circle-fill"></i> إضافة منشأة جديدة
            </a>
        </div>
        <div class="card-body">
            <!-- مستكشف المواقع -->
            <div class="row">
                <div class="col-md-3">
                    <!-- شجرة التنقل -->
                    <div class="card mb-4 border-0 shadow-sm">
