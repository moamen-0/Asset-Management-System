                                    @foreach (var facility in Model)
                                    {
                                        <li class="mb-2">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-building me-2 text-primary"></i>
                                                <a href="#" class="facility-item" data-id="@facility.Id">@facility.Name</a>
                                                <div class="ms-auto">
