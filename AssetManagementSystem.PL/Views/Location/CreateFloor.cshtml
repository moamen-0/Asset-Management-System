@model AssetManagementSystem.DAL.Entities.Floor
@{
    ViewData["Title"] = "Create Floor";
    Layout = "~/Views/Shared/_Dashboard_Tabler.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-white">
            <h2 class="mb-0"><i class="bi bi-layers-plus me-2"></i> Create New Floor</h2>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5 class="text-muted">Building: <span class="text-primary">@ViewBag.BuildingName</span></h5>
            </div>

            <form asp-action="CreateFloor" method="post">
                <input type="hidden" asp-for="BuildingId" value="@ViewBag.BuildingId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Floor Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>