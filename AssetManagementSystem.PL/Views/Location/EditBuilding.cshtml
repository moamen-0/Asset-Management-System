@model AssetManagementSystem.DAL.Entities.Building
@{
    ViewData["Title"] = "Edit Building";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0"><i class="bi bi-house-gear me-2"></i> Edit Building</h2>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5 class="text-muted">Facility: <span class="text-primary">@ViewBag.FacilityName</span></h5>
            </div>

            <form asp-action="EditBuilding" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FacilityId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Building Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>