@model AssetManagementSystem.DAL.Entities.Room
@{
    ViewData["Title"] = "Delete Room";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i> Delete Room</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="bi bi-exclamation-circle"></i> Warning!</h5>
                <p>Are you sure you want to delete the room "<strong>@Model.Name (@Model.RoomTag)</strong>"?</p>
                <p>This action cannot be undone.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Room Tag:</dt>
                <dd class="col-sm-9">@Model.RoomTag</dd>

                <dt class="col-sm-3">Room Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Floor:</dt>
                <dd class="col-sm-9">@Model.Floor?.Name</dd>

                <dt class="col-sm-3">Department:</dt>
                <dd class="col-sm-9">@Model.Department?.Name</dd>
            </dl>

            <form asp-action="DeleteRoom" method="post">
                <input type="hidden" name="id" value="@Model.RoomTag" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>