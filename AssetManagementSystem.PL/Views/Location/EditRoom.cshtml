@model AssetManagementSystem.DAL.Entities.Room
@{
    ViewData["Title"] = "Edit Room";
    Layout = "~/Views/Shared/_Dashboard_Tabler.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="bi bi-door-open me-2"></i> Edit Room</h2>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5 class="text-muted">Floor: <span class="text-primary">@ViewBag.FloorName</span></h5>
            </div>

            <form asp-action="EditRoom" method="post">
                <input type="hidden" asp-for="RoomTag" />
                <input type="hidden" asp-for="FloorId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Room Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label">Department</label>
                    <select asp-for="DepartmentId" class="form-select" required>
                        <option value="">-- Select Department --</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.Id" selected="@(Model.DepartmentId == dept.Id)">@dept.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>