@model AssetManagementSystem.DAL.Entities.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<!-- Custom Styles -->
<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: 0.3s ease-in-out;
    }
</style>

<!-- Page Content -->
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="text-primary mb-4">
                <i class="bi bi-pencil-square me-2"></i> Edit User
            </h2>

            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-person-circle me-1"></i> Full Name</label>
                    <input asp-for="FullName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-envelope me-1"></i> Email</label>
                    <input asp-for="Email" class="form-control" type="email" required />
                </div>

                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-person-gear me-1"></i> Role</label>
                    @* <select asp-for="Role" class="form-control">
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                    </select> *@
                </div>

                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-save"></i> Update
                </button>

                <a class="btn btn-secondary ms-2" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
