@model IEnumerable<AssetManagementSystem.DAL.Entities.User>
@{
    ViewData["Title"] = "مستخدمو القسم";
    Layout = "~/Views/Shared/_Dashboard_Tabler.cshtml";
}

<div class="container-fluid mt-4" dir="rtl">
    <!-- Main Header Section -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="page-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
            <div class="col">
                <h1 class="page-title mb-1">إدارة المستخدمين</h1>
                <p class="page-subtitle text-muted mb-0">إدارة وتنظيم مستخدمي النظام والأقسام</p>
            </div>
            <div class="col-auto">
                <div class="d-flex gap-2">
                    <button class="btn btn-gradient-primary btn-elevated" data-bs-toggle="modal" data-bs-target="#importUsersModal">
                        <i class="fas fa-file-import me-2"></i>
                        <span>استيراد مستخدمين</span>
                    </button>
                    <a asp-action="Create" class="btn btn-gradient-success btn-elevated">
                        <i class="fas fa-user-plus me-2"></i>
                        <span>إضافة مستخدم جديد</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="main-card">
        <!-- Search and Filter Section -->
        <div class="filter-section">
            <div class="filter-header">
                <div class="filter-icon">
                    <i class="fas fa-filter"></i>
                </div>
                <h5 class="filter-title">البحث والتصفية</h5>
            </div>
            <div class="filter-body">
                <form method="get" class="filter-form">
                    <div class="row g-3">
                        <div class="col-lg-4 col-md-6">
                            <label class="form-label">القسم</label>
                            <div class="input-group input-group-modern">
                                <span class="input-group-text">
                                    <i class="fas fa-building"></i>
                                </span>
                                <select name="departmentId" class="form-select" asp-items="ViewBag.Departments" onchange="this.form.submit()">
                                    <option value="">-- جميع الأقسام --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <label class="form-label">الدور</label>
                            <div class="input-group input-group-modern">
                                <span class="input-group-text">
                                    <i class="fas fa-user-tag"></i>
                                </span>
                                <select name="roleName" class="form-select" asp-items="ViewBag.Roles" onchange="this.form.submit()">
                                    <option value="">-- جميع الأدوار --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-8">
                            <label class="form-label">بحث</label>
                            <div class="input-group input-group-modern">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" name="searchTerm" class="form-control"
                                       placeholder="ابحث باستخدام الاسم أو البريد الإلكتروني أو رقم الهوية..."
                                       value="@ViewBag.SearchTerm">
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-gradient-primary w-100">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Filter Info Alerts -->
        @if (ViewBag.SelectedRoleId != null)
        {
            <div class="alert alert-modern alert-info">
                <div class="alert-icon">
                    <i class="fas fa-user-tag"></i>
                </div>
                <div class="alert-content">
                    <h6 class="alert-title">الدور: @ViewBag.SelectedRoleName</h6>
                    <p class="alert-text">عرض @Model.Count() مستخدم بهذا الدور</p>
                </div>
            </div>
        }
        @if (ViewBag.SelectedDepartmentId != null)
        {
            <div class="alert alert-modern alert-info">
                <div class="alert-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="alert-content">
                    <h6 class="alert-title">القسم: @ViewBag.SelectedDepartmentName</h6>
                    <p class="alert-text">عرض @Model.Count() مستخدم في هذا القسم</p>
                </div>
            </div>
        }

        <!-- Users Table Section -->
        <div class="table-section">
            <div class="table-container">
                <table id="departmentUsersTable" class="table table-modern">
                    <thead>
                        <tr>
                            <th>الاسم الكامل</th>
                            <th>البريد الإلكتروني</th>
                            <th>القسم</th>
                            <th>الأدوار</th>
                            <th>رقم الهوية</th>
                            <th>رقم الملف</th>
                            <th class="text-center">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr class="table-row-modern">
                                    <td>
                                        <div class="user-info">
                                            <div class="user-avatar">
                                                @user.FullName.Substring(0, 1).ToUpper()
                                            </div>
                                            <div class="user-details">
                                                <h6 class="user-name">@user.FullName</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="email-cell" dir="ltr">@user.Email</td>
                                    <td>
                                        @if (user.Department != null)
                                        {
                                            <span class="badge badge-department">
                                                <i class="fas fa-building me-1"></i>
                                                @user.Department.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-unassigned">غير معين</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="roles-container">
                                            @if (ViewBag.UserRoles != null && ViewBag.UserRoles.ContainsKey(user.Id))
                                            {
                                                foreach (var role in ViewBag.UserRoles[user.Id])
                                                {
                                                    <span class="badge badge-role">@role</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge badge-no-roles">لا توجد أدوار</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="id-cell" dir="ltr">
                                        @if (!string.IsNullOrEmpty(user.NationalId))
                                        {
                                            <span class="id-value">@user.NationalId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted-modern">غير متوفر</span>
                                        }
                                    </td>
                                    <td class="id-cell" dir="ltr">
                                        @if (!string.IsNullOrEmpty(user.RecipientFileNumber))
                                        {
                                            <span class="id-value">@user.RecipientFileNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted-modern">غير متوفر</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-action="Details" asp-route-id="@user.Id" class="btn-action btn-action-info" data-bs-toggle="tooltip" title="عرض التفاصيل">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn-action btn-action-warning" data-bs-toggle="tooltip" title="تعديل المستخدم">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn-action btn-action-primary" data-bs-toggle="tooltip" title="إدارة الأدوار">
                                                <i class="fas fa-user-tag"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn-action btn-action-danger delete-user" data-bs-toggle="tooltip" title="حذف المستخدم">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">
                                    <div class="empty-state">
                                        <div class="empty-icon">
                                            <i class="fas fa-users-slash"></i>
                                        </div>
                                        <h5 class="empty-title">لم يتم العثور على مستخدمين</h5>
                                        <p class="empty-text">حاول تغيير معايير البحث أو إضافة مستخدمين جدد</p>
                                        <a asp-action="Create" class="btn btn-gradient-primary">
                                            <i class="fas fa-user-plus me-2"></i>
                                            إضافة مستخدم جديد
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="pagination-section">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-modern">
                        @{
                            int totalPages = ViewBag.TotalPages ?? 1;
                            int currentPage = ViewBag.CurrentPage ?? 1;
                            int maxPagesToShow = 5;
                            int startPage = Math.Max(1, currentPage - (maxPagesToShow / 2));
                            int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);

                            if (endPage - startPage + 1 < maxPagesToShow)
                            {
                                startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                            }
                        }

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("DepartmentUsers", new { departmentId = ViewBag.SelectedDepartmentId, searchTerm = ViewBag.SearchTerm, page = currentPage - 1 })" aria-label="Previous">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("DepartmentUsers", new { departmentId = ViewBag.SelectedDepartmentId, roleName = ViewBag.SelectedRoleName, searchTerm = ViewBag.SearchTerm, page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("DepartmentUsers", new { departmentId = ViewBag.SelectedDepartmentId, searchTerm = ViewBag.SearchTerm, page = currentPage + 1 })" aria-label="Next">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="pagination-info">
                    صفحة @currentPage من @totalPages
                </div>
            </div>
        }
    </div>
</div>

<!-- Import Users Modal -->
<div class="modal fade" id="importUsersModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content modal-modern">
            <div class="modal-header">
                <div class="modal-icon">
                    <i class="fas fa-file-import"></i>
                </div>
                <div class="modal-title-section">
                    <h5 class="modal-title">استيراد المستخدمين</h5>
                    <p class="modal-subtitle">قم بتحميل ملف Excel يحتوي على بيانات المستخدمين</p>
                </div>
                <button type="button" class="btn-close-modern" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="import-visual">
                    <div class="import-flow">
                        <div class="flow-item">
                            <div class="flow-icon excel">
                                <i class="fas fa-file-excel"></i>
                            </div>
                            <span class="flow-label">ملف Excel</span>
                        </div>
                        <div class="flow-arrow">
                            <i class="fas fa-arrow-left"></i>
                        </div>
                        <div class="flow-item">
                            <div class="flow-icon users">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="flow-label">مستخدمين جدد</span>
                        </div>
                    </div>
                </div>

                @using (Html.BeginForm("ImportUsers", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "importUsersForm" }))
                {
                    <div class="file-upload-section">
                        <div class="file-upload-container">
                            <input type="file" name="file" id="importUsersFile" class="file-input" accept=".xlsx,.xls" required />
                            <label for="importUsersFile" class="file-upload-label">
                                <div class="upload-icon">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                </div>
                                <div class="upload-text">
                                    <span class="upload-title">اسحب الملف هنا أو انقر للتصفح</span>
                                    <span class="upload-subtitle">الملفات المدعومة: .xlsx, .xls</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="import-info">
                        <div class="info-header">
                            <i class="fas fa-info-circle"></i>
                            <h6>بيانات الاستيراد المطلوبة</h6>
                        </div>
                        <div class="info-grid">
                            <div class="info-item required">
                                <i class="fas fa-asterisk"></i>
                                <span>البريد الإلكتروني (مطلوب)</span>
                            </div>
                            <div class="info-item required">
                                <i class="fas fa-asterisk"></i>
                                <span>الاسم الكامل (مطلوب)</span>
                            </div>
                            <div class="info-item optional">
                                <i class="fas fa-circle"></i>
                                <span>الرقم الوطني</span>
                            </div>
                            <div class="info-item optional">
                                <i class="fas fa-circle"></i>
                                <span>رقم الملف</span>
                            </div>
                            <div class="info-item optional">
                                <i class="fas fa-circle"></i>
                                <span>اسم القسم</span>
                            </div>
                            <div class="info-item optional">
                                <i class="fas fa-circle"></i>
                                <span>كلمة المرور</span>
                            </div>
                            <div class="info-item optional">
                                <i class="fas fa-circle"></i>
                                <span>الأدوار</span>
                            </div>
                        </div>
                    </div>

                    <div class="template-download">
                        <a href="@Url.Action("DownloadUserTemplate", "User")" class="btn btn-outline-primary btn-template">
                            <i class="fas fa-download me-2"></i>
                            تنزيل نموذج للاستيراد
                        </a>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>
                    إلغاء
                </button>
                <button type="submit" form="importUsersForm" class="btn btn-gradient-primary" disabled>
                    <i class="fas fa-file-import me-2"></i>
                    استيراد المستخدمين
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))

        @if (TempData["ImportErrors"] != null)
        {
            <text>
                Swal.fire({
                    title: 'تم استيراد المستخدمين مع بعض الأخطاء',
                    html: '@Html.Raw(TempData["ImportErrors"])',
                    icon: 'warning',
                    confirmButtonText: 'حسناً'
                });
            </text>
        }

        @if (TempData["Success"] != null)
        {
            <text>
                Swal.fire({
                    title: 'تم بنجاح!',
                    text: '@TempData["Success"]',
                    icon: 'success',
                    confirmButtonText: 'حسناً'
                });
            </text>
        }

        @if (TempData["Error"] != null)
        {
            <text>
                Swal.fire({
                    title: 'خطأ!',
                    text: '@TempData["Error"]',
                    icon: 'error',
                    confirmButtonText: 'حسناً'
                });
            </text>
        }

            // File upload handling
            $('#importUsersFile').on('change', function() {
                const file = this.files[0];
                const submitBtn = $('button[form="importUsersForm"]');
                const label = $(this).next('.file-upload-label');
                
                if (file) {
                    label.addClass('file-selected');
                    label.find('.upload-title').text(file.name);
                    label.find('.upload-subtitle').text(`حجم الملف: ${(file.size / 1024 / 1024).toFixed(2)} MB`);
                    submitBtn.prop('disabled', false);
                } else {
                    label.removeClass('file-selected');
                    label.find('.upload-title').text('اسحب الملف هنا أو انقر للتصفح');
                    label.find('.upload-subtitle').text('الملفات المدعومة: .xlsx, .xls');
                    submitBtn.prop('disabled', true);
                }
            });

            // Form submission with loading
            $('#importUsersForm').on('submit', function() {
                if (this.checkValidity()) {
                    const loadingOverlay = $(`
                        <div class="loading-overlay">
                            <div class="loading-content">
                                <div class="loading-spinner"></div>
                                <h5>جاري استيراد المستخدمين...</h5>
                                <p>يرجى الانتظار، قد تستغرق هذه العملية بعض الوقت</p>
                            </div>
                        </div>
                    `);
                    $('body').append(loadingOverlay);
                }
            });

            // Initialize DataTable
            $('#departmentUsersTable').DataTable({
                "paging": false,
                "ordering": true,
                "info": false,
                "searching": false,
                "responsive": true,
                "language": {
                    "emptyTable": "لم يتم العثور على مستخدمين",
                    "zeroRecords": "لم يتم العثور على مستخدمين مطابقين"
                },
                "autoWidth": false,
                "columnDefs": [
                    { "targets": -1, "className": "text-center", "orderable": false }
                ]
            });

            // Delete confirmation
            $('.delete-user').on('click', function(e) {
                if (!confirm('هل أنت متأكد من رغبتك في حذف هذا المستخدم؟ لا يمكن التراجع عن هذا الإجراء.')) {
                    e.preventDefault();
                }
            });
        });
    </script>

    <style>
        :root {
            --primary-color: #667eea;
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-color: #48bb78;
            --success-gradient: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            --warning-color: #ed8936;
            --danger-color: #f56565;
            --info-color: #4299e1;
            --secondary-color: #718096;
            --light-bg: #f8fafc;
            --white: #ffffff;
            --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
            --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
            --shadow-xl: 0 20px 32px rgba(0, 0, 0, 0.15);
            --border-radius: 12px;
            --border-radius-lg: 16px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Page Header */
        .page-header {
            margin-bottom: 2rem;
        }

        .page-icon {
            width: 64px;
            height: 64px;
            background: var(--primary-gradient);
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            box-shadow: var(--shadow-md);
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3748;
            margin: 0;
        }

        .page-subtitle {
            font-size: 1rem;
            color: #718096;
        }

        /* Gradient Buttons */
        .btn-gradient-primary {
            background: var(--primary-gradient);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: var(--border-radius);
            transition: var(--transition);
            box-shadow: var(--shadow-md);
        }

        .btn-gradient-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
            color: white;
        }

        .btn-gradient-success {
            background: var(--success-gradient);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: var(--border-radius);
            transition: var(--transition);
            box-shadow: var(--shadow-md);
        }

        .btn-gradient-success:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
            color: white;
        }

        .btn-elevated {
            position: relative;
            overflow: hidden;
        }

        .btn-elevated::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-elevated:hover::before {
            left: 100%;
        }

        /* Main Card */
        .main-card {
            background: var(--white);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-xl);
            overflow: hidden;
        }

        /* Filter Section */
        .filter-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
        }

        .filter-header {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .filter-icon {
            width: 48px;
            height: 48px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 1rem;
            backdrop-filter: blur(10px);
        }

        .filter-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0;
        }

        .filter-form {
            background: rgba(255, 255, 255, 0.1);
            padding: 1.5rem;
            border-radius: var(--border-radius);
            backdrop-filter: blur(10px);
        }

        .input-group-modern .input-group-text {
            background: rgba(255, 255, 255, 0.9);
            border: none;
            color: var(--primary-color);
            border-radius: var(--border-radius) 0 0 var(--border-radius);
        }

        .input-group-modern .form-control,
        .input-group-modern .form-select {
            border: none;
            border-radius: 0 var(--border-radius) var(--border-radius) 0;
            background: rgba(255, 255, 255, 0.95);
            transition: var(--transition);
        }

        .input-group-modern .form-control:focus,
        .input-group-modern .form-select:focus {
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background: white;
        }

        .form-label {
            font-weight: 600;
            color: white;
            margin-bottom: 0.5rem;
        }

        /* Alert Modern */
        .alert-modern {
            border: none;
            border-radius: var(--border-radius);
            padding: 1rem 1.5rem;
            margin: 1.5rem;
            display: flex;
            align-items: center;
            box-shadow: var(--shadow-sm);
