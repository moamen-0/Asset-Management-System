@model IEnumerable<AssetManagementSystem.DAL.Entities.User>
@{
    ViewData["Title"] = "Department Users";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="bi bi-people-fill me-2"></i> المستخدمين</h2>
            <!-- Add User Button -->
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-person-plus-fill"></i> إضافة مستخدم
            </a>
        </div>

        <!-- Search and Filter Form -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label">Department:</label>
                        <select name="departmentId" class="form-select" asp-items="ViewBag.Departments" onchange="this.form.submit()">
                            <option value="">-- All Departments --</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">بحث:</label>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search users..." value="@ViewBag.SearchTerm">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> بحث
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (ViewBag.SelectedDepartmentId != null)
        {
            <div class="alert alert-info">
                <h5><i class="bi bi-info-circle"></i> القسم: @ViewBag.SelectedDepartmentName</h5>
                <p>Showing @Model.Count() users in this department</p>
            </div>
        }

        <!-- Users Table -->
        <div class="table-responsive">
            <table id="departmentUsersTable" class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>National ID</th>
                        <th>File Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@(user.Department?.Name ?? "Not Assigned")</td>
                                <td>@(user.NationalId ?? "N/A")</td>
                                <td>@(user.RecipientFileNumber ?? "N/A")</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit User">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary" title="Manage Roles">
                                            <i class="bi bi-person-gear"></i>
                                        </a>
                                        <!-- Delete Button -->
                                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" title="Delete User">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No users found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <div class="mt-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @{
                        int totalPages = ViewBag.TotalPages ?? 1;
                        int currentPage = ViewBag.CurrentPage ?? 1;
                        int maxPagesToShow = 5;
                        int startPage = Math.Max(1, currentPage - (maxPagesToShow / 2));
                        int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
                        
                        // Adjust startPage if we're near the end
                        if (endPage - startPage + 1 < maxPagesToShow) 
                        {
                            startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                        }
                    }

                    <!-- Previous button -->
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("DepartmentUsers", new { departmentId = ViewBag.SelectedDepartmentId, searchTerm = ViewBag.SearchTerm, page = currentPage - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- Page numbers -->
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("DepartmentUsers", new { departmentId = ViewBag.SelectedDepartmentId, searchTerm = ViewBag.SearchTerm, page = i })">@i</a>
                        </li>
                    }

                    <!-- Next button -->
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("DepartmentUsers", new { departmentId = ViewBag.SelectedDepartmentId, searchTerm = ViewBag.SearchTerm, page = currentPage + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable with pagination disabled (we use server-side pagination)
            $('#departmentUsersTable').DataTable({
                "paging": false, // Disable DataTables pagination since we're using server-side
                "ordering": true,
                "info": false, // Disable info since we show it in our custom pagination
                "searching": false, // We already have a custom search box
                "responsive": true,
                "language": {
                    "emptyTable": "No users found",
                    "zeroRecords": "No matching users found"
                }
            });
            
            // Add confirmation dialog for delete buttons
            $('a[asp-action="Delete"]').on('click', function(e) {
                if (!confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}