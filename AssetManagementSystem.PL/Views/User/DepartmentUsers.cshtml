@model IEnumerable<AssetManagementSystem.DAL.Entities.User>
@{
    ViewData["Title"] = "Department Users";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="bi bi-people-fill me-2"></i> Department Users</h2>
        </div>

        <!-- Search and Filter Form -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label">Department:</label>
                        <select name="departmentId" class="form-select" asp-items="ViewBag.Departments" onchange="this.form.submit()">
                            <option value="">-- All Departments --</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Search:</label>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search users..." value="@ViewBag.SearchTerm">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (ViewBag.SelectedDepartmentId != null)
        {
            <div class="alert alert-info">
                <h5><i class="bi bi-info-circle"></i> Department: @ViewBag.SelectedDepartmentName</h5>
                <p>Showing @Model.Count() users in this department</p>
            </div>
        }

        <!-- Users Table -->
        <div class="table-responsive">
            <table id="departmentUsersTable" class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>National ID</th>
                        <th>File Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@(user.Department?.Name ?? "Not Assigned")</td>
                                <td>@(user.NationalId ?? "N/A")</td>
                                <td>@(user.RecipientFileNumber ?? "N/A")</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-person-gear"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No users found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#departmentUsersTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "responsive": true,
                "language": {
                    "search": "Quick Search:",
                    "lengthMenu": "Show _MENU_ users per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ users"
                }
            });
        });
    </script>
}