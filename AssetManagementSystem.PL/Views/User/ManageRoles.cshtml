@model AssetManagementSystem.PL.Models.UserRoleViewModel
@{
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Manage Roles for User</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>User Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                    </dl>
                </div>
                <div class="col-md-6">
                    <h5>Current Roles</h5>
                    @if (Model.CurrentRoles.Any())
                    {
                        foreach (var role in Model.CurrentRoles)
                        {
                            <span class="badge bg-info me-2">@role</span>
                        }
                    }
                    else
                    {
                        <p>No roles assigned</p>
                    }
                </div>
            </div>

            <form asp-action="UpdateRoles" method="post">
                <input type="hidden" asp-for="UserId" />

                <div class="form-group">
                    <h5>Assign Roles</h5>
                    <div class="row">
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <div class="col-md-3 mb-2">
                                <div class="form-check">
                                    <input type="checkbox"
                                           name="selectedRoles"
                                           value="@role"
                                           class="form-check-input"
                                    @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                                    <label class="form-check-label">@role</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Update Roles</button>
                    <a asp-action="DepartmentUsers" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any client-side validation or enhancement here
        });
    </script>
}