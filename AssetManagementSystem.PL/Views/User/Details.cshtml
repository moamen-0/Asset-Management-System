@model AssetManagementSystem.DAL.Entities.User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<!-- Custom Styles -->
<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .detail-item {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .detail-icon {
        font-size: 20px;
        color: #0d6efd;
        margin-right: 8px;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: 0.3s ease-in-out;
    }
</style>

<!-- Page Content -->
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="text-primary mb-4">
                <i class="bi bi-person-fill me-2"></i> User Details
            </h2>

            <div class="detail-item">
                <i class="bi bi-person-circle detail-icon"></i> <strong>Full Name:</strong> @Model.FullName
            </div>
            <div class="detail-item">
                <i class="bi bi-envelope detail-icon"></i> <strong>Email:</strong> @Model.Email
            </div>
            <div class="detail-item">
                <i class="bi bi-building detail-icon"></i> <strong>Department:</strong> @(Model.Department?.Name ?? "N/A")
            </div>
            <div class="detail-item">
                <i class="bi bi-telephone detail-icon"></i> <strong>Phone:</strong> @(Model.PhoneNumber ?? "N/A")
            </div>

            <a class="btn btn-secondary mt-3" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
