@model AssetManagementSystem.DAL.Entities.AssetTransfer
@{
    ViewData["Title"] = "حذف مناقلة أصل";
    Layout = "~/Views/Shared/_Dashboard_Tabler.cshtml";
}

<link rel="stylesheet" href="~/css/asset-transfer-delete.css" />

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h1><i class="bi bi-trash3-fill me-3"></i>حذف مناقلة أصل</h1>
                <p class="subtitle mb-0">تأكيد حذف عملية نقل الأصل</p>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-modern btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>العودة للقائمة
                </a>
            </div>
        </div>
    </div>

    <!-- Delete Card -->
    <div class="delete-card">
        <div class="card-header">
            <h2><i class="bi bi-exclamation-triangle-fill me-2"></i>تأكيد الحذف</h2>
        </div>
        <div class="card-body text-center">
            <div class="warning-icon">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>

            <div class="warning-message">
                <i class="bi bi-exclamation-circle-fill"></i>
                <p>هل أنت متأكد من رغبتك في حذف هذه المناقلة؟ لا يمكن التراجع عن هذا الإجراء.</p>
            </div>

            <div class="details-list">
                <div class="detail-item">
                    <i class="bi bi-tag"></i>
                    <span class="label">رمز الأصل:</span>
                    <span class="value">@Model.AssetTag</span>
                </div>
                <div class="detail-item">
                    <i class="bi bi-list-task"></i>
                    <span class="label">نوع المناقلة:</span>
                    <span class="value">@Model.TransferType</span>
                </div>
                <div class="detail-item">
                    <i class="bi bi-building-fill-down"></i>
                    <span class="label">القسم المصدر:</span>
                    <span class="value">@Model.FromDepartment</span>
                </div>
                <div class="detail-item">
                    <i class="bi bi-building-fill-up"></i>
                    <span class="label">القسم المستهدف:</span>
                    <span class="value">@Model.ToDepartment</span>
                </div>
                <div class="detail-item">
                    <i class="bi bi-calendar-event"></i>
                    <span class="label">تاريخ المناقلة:</span>
                    <span class="value">@Model.TransferDate.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-modern btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>إلغاء
                    </a>
                    <button type="submit" class="btn btn-modern btn-danger">
                        <i class="bi bi-trash3 me-2"></i>تأكيد الحذف
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 0.9em;
        padding: 0.3em 0.6em;
    }
</style>