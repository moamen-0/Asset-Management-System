@model AssetManagementSystem.DAL.Entities.AssetTransfer

@{
    ViewData["Title"] = "Delete Asset Transfer";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@if (Model == null)
{
    <h2>Error: Asset Transfer not found.</h2>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
}
else
{
    <h2>حذف مناقلة</h2>
    <h4>هل انت متأكد؟</h4>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Transfer Type</dt>
                <dd class="col-sm-8">@Model.TransferType</dd>

                <dt class="col-sm-4">Transfer Date</dt>
                <dd class="col-sm-8">@Model.TransferDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">From Department</dt>
                <dd class="col-sm-8">@Model.FromDepartment</dd>

                <dt class="col-sm-4">To Department</dt>
                <dd class="col-sm-8">@Model.ToDepartment</dd>

                <dt class="col-sm-4">Asset Description</dt>
                <dd class="col-sm-8">@Model.Asset?.AssetDescription</dd>

                <dt class="col-sm-4">Asset Tag</dt>
                <dd class="col-sm-8">@Model.AssetTag</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">حذف</button>
        <a asp-action="Index" class="btn btn-secondary">الرجوع</a>
    </form>
}
