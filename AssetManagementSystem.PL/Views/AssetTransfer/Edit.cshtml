<!-- Edit.cshtml -->
@model AssetManagementSystem.DAL.Entities.AssetTransfer
@{
	ViewData["Title"] = "Edit Asset Transfer";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<h2>Edit Asset Transfer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="TransferType"></label>
        <input asp-for="TransferType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FromDepartment"></label>
        <input asp-for="FromDepartment" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ToDepartment"></label>
        <input asp-for="ToDepartment" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AssetTag"></label>
        <input asp-for="AssetTag" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
