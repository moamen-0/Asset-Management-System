@model AssetManagementSystem.DAL.Entities.ReturnDocument
@{
    ViewData["Title"] = "Delete Return Document";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="bi bi-trash me-2"></i> تأكيد حذف مستند الإرجاع</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4><i class="bi bi-exclamation-triangle-fill me-2"></i> تحذير!</h4>
                <p>هل أنت متأكد من رغبتك في حذف مستند الإرجاع هذا؟ هذا الإجراء لا يمكن التراجع عنه.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">رقم المستند:</dt>
                        <dd class="col-sm-8">@Model.DocumentNumber</dd>

                        <dt class="col-sm-4">تاريخ الإرجاع:</dt>
                        <dd class="col-sm-8">@Model.ReturnDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">الجهة المرجعة:</dt>
                        <dd class="col-sm-8">@Model.ReturningDepartment</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">عدد الأصول:</dt>
                        <dd class="col-sm-8">@Model.Items?.Count() ?? 0</dd>

                        <dt class="col-sm-4">سبب الإرجاع:</dt>
                        <dd class="col-sm-8">@Model.ReturnReason</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> العودة للقائمة
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> تأكيد الحذف
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>