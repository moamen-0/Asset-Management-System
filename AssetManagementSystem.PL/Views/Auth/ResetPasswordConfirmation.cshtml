@{
    ViewData["Title"] = "تم إعادة تعيين كلمة المرور بنجاح";
    Layout = "~/Views/Shared/_AuthLayout_Enhanced.cshtml";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-card-content">
                <!-- Visual Section -->
                <div class="auth-visual">
                    <div class="auth-visual-content">
                        <div class="auth-visual-icon success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h3>تم بنجاح!</h3>
                        <p>تم إعادة تعيين كلمة المرور الخاصة بك بنجاح</p>
                    </div>
                </div>

                <!-- Success Section -->
                <div class="auth-form-section">
                    <div class="auth-header">
                        <h1>كلمة المرور جاهزة</h1>
                        <p>يمكنك الآن تسجيل الدخول باستخدام كلمة المرور الجديدة</p>
                    </div>

                    <div class="auth-alert auth-alert-success">
                        <i class="fas fa-check-circle ms-2"></i>
                        <strong>تم بنجاح:</strong>
                        <p class="mt-2 mb-0">تم إعادة تعيين كلمة المرور الخاصة بك بنجاح. يمكنك الآن تسجيل الدخول باستخدام كلمة المرور الجديدة.</p>
                    </div>

                    <div class="auth-actions">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt ms-2"></i>
                            تسجيل الدخول
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

