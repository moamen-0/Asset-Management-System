@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-9">
        <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 800px;">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                <h3 class="mb-0">Forgot Password</h3>
            </div>
            <div class="card-body p-4">
                <p class="text-muted text-center">Enter your email to receive a password reset link.</p>
                <form asp-action="ForgotPassword" method="post">
                    <div class="form-group mb-3">
                        <label for="email" class="fw-bold">Email Address</label>
                        <input type="email" class="form-control shadow-sm p-2" id="email" name="email" required
                               placeholder="Enter your email">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">Send Reset Link</button>
                        <a asp-action="Login" class="btn btn-outline-secondary btn-lg shadow-sm">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
