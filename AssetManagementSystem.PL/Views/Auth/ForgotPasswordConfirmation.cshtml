@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-9">
        <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 800px;">
            <div class="card-header bg-success text-white text-center py-3 rounded-top-4">
                <h3 class="mb-0">Password Reset Email Sent</h3>
            </div>
            <div class="card-body p-4 text-center">
                <div class="alert alert-success shadow-sm">
                    <p class="mb-2">If an account exists with the email you provided, we've sent password reset instructions to that email address.</p>
                    <p>Please check your email and follow the link to reset your password.</p>
                </div>
                <a asp-action="Login" class="btn btn-primary btn-lg shadow-sm mt-3">Return to Login</a>
            </div>
        </div>
    </div>
</div>
