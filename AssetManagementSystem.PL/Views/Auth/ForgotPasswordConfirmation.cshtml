@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Password Reset Email Sent</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <p>If an account exists with the email you provided, we've sent password reset instructions to that email address.</p>
                        <p>Please check your email and follow the link to reset your password.</p>
                    </div>
                    <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>