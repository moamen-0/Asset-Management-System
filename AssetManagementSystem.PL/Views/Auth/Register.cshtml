@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-5 shadow-lg rounded-4 border-0" style="max-width: 700px; width: 100%;">

        <div class="card-body">
            <h2 class="text-center fw-bold mb-4 text-primary">Create an Account</h2>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                        <input asp-for="FullName" class="form-control rounded-3 shadow-sm" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-4">
                        <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                        <input asp-for="Email" class="form-control rounded-3 shadow-sm" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="Password" class="form-label fw-semibold">Password</label>
                        <input asp-for="Password" type="password" class="form-control rounded-3 shadow-sm" placeholder="Enter a strong password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3 shadow-sm" placeholder="Re-enter password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="NationalId" class="form-label fw-semibold">National ID</label>
                        <input asp-for="NationalId" class="form-control rounded-3 shadow-sm" placeholder="Enter National ID" />
                        <span asp-validation-for="NationalId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-4">
                        <label asp-for="RecipientFileNumber" class="form-label fw-semibold">File Number</label>
                        <input asp-for="RecipientFileNumber" class="form-control rounded-3 shadow-sm" placeholder="Enter file number" />
                        <span asp-validation-for="RecipientFileNumber" class="text-danger small"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-bold shadow-sm">
                    <i class="fas fa-user-plus me-2"></i> Register
                </button>
            </form>

            <p class="mt-3 text-center">
                <span class="text-muted">Already have an account?</span>
                <a asp-controller="Auth" asp-action="Login" class="text-decoration-none fw-semibold text-primary">Log in</a>
            </p>
        </div>
    </div>
</div>
